<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Guardian"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a trusted family member to be notified if you are in danger."
        android:textSize="20sp"
        android:textColor="#1A1A1A"
        android:gravity="center"
        android:layout_marginBottom="48dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_menu_myplaces"
        android:tint="#1A1A1A"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnSelectContact"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Select from Contacts"
        android:textSize="24sp"
        android:backgroundTint="#2E7D32"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvCurrentGuardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="No Guardian Selected"
        android:textSize="18sp"
        android:textColor="#1A1A1A"
        android:textStyle="bold" />

</LinearLayout>
