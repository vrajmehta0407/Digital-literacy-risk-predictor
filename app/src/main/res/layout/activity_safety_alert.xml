<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D32F2F"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Security Shield"
        android:src="@android:drawable/ic_lock_lock"
        android:tint="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="ðŸš¨ STOP! DO NOT SHARE! ðŸš¨"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Sender Information -->
    <TextView
        android:id="@+id/tvSenderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="âš ï¸ Suspicious message from:\nUnknown"
        android:textColor="#FFEBEE"
        android:textSize="18sp"
        android:gravity="center"
        android:background="#B71C1C"
        android:padding="12dp" />

    <!-- Masked OTP Display -->
    <TextView
        android:id="@+id/tvMaskedCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#B71C1C"
        android:padding="20dp"
        android:text="* * * * * *"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:letterSpacing="0.3"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Code hidden for your safety"
        android:textColor="#FFEBEE"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium" />

    <!-- Warning Message -->
    <TextView
        android:id="@+id/tvWarningMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="â›” NEVER share this code\nâ›” Banks NEVER ask for OTP\nâ›” This could be a SCAM"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:background="#C62828"
        android:padding="16dp" />

    <!-- Large "I Did NOT Share" Confirmation Button -->
    <Button
        android:id="@+id/btnConfirmNotShared"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:text="âœ“ I Did NOT Share This Code"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="I Understand - Close"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>

</ScrollView>
